<%- include ('./layout/head'); -%>

<body>
  <div class="hero_area">
    <!-- header section strats -->
    <%- include ('./layout/header'); -%>
    <!-- end header section -->

  </div>
  <!-- end hero area -->

  <!-- shop section -->

  <section class="shop_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Latest Products
        </h2>
      </div>
     
          <div class=" mb-3" style="width: 800px;margin-left: 200px; margin-top: 10px;height: 400px;background-color: #fbf9f7; padding: 20px; border-radius: 8px;">
            <a href="/product/<%= shop[0].id %>"></a>
            <div class="row g-0">
              <div class="col-md-4">
                <img src="../../<%= shop[0].image %>" class="img-fluid rounded-start" >
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 ><b id="name"><%= shop[0].name %></b></h5>
                  <p ><%= shop[0].title%></p>
                  <p >
                    <b >Price:</b> $<%= shop[0].price %>
                  </p>
                 
                
                  <div class="input-group input-spinner">
                    <p><b>Quantity: </b></p>
                    <input type="number" step="0" min="0" max="10" value="1"  name="quantity"  style="width: 100px; height: 30px;margin-left: 10px;" id="quantity-field">
                 </div>
                
                
                </div>
                <button id="button" onclick="addcart(this)" class="btn btn-lg btn-dark w-30 rounded-pill">Add to cart</button>
              </div>
               </div>
               </div>                 
                </div>
              </div>
            </div>
          </div>
          <div class="btn-box">
            <a href="/shop">
              View All Products
            </a>
          </div>
      
    </div>
  </section>

  <!-- end shop section -->

  <!-- info section -->

  <%- include ('./layout/footer'); -%>

</body>

</html>